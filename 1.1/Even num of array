#include <iostream>
using namespace std;

    void arrays(int array[],int n)
    {
        cout<<"Even elements are : ";
       for (int i=0;i<n;i++)
       {
           if (array[i]%2==0)
           {
              cout<<array[i]<<","; 
           }
       }
    }
    
int main()
{
     int n;
     
     cout<<"Enter the size of an array : "<<endl;
     cin>>n;
     
     int arr[n];
     
     for (int i=0;i<n;i++)
     {
         cin>>arr[i];
     }
     arrays(arr,n);
     
    return 0;
}
